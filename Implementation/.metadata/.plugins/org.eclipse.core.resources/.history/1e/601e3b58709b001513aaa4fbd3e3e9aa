package com.group15.splitfield.controller;

import java.util.List;
import java.util.Queue;

import javax.swing.JButton;
import javax.swing.JFrame;

import com.group15.splitfield.gui.*;

public class GameScreenManager extends JFrame {
	
	Object currentPanel;
	Object pausePanel;
	
	//constructor
	public GameScreenManager(){
		// 
		currentPanel = new MainMenu();
	}
	
	//methods
	public Queue<JButton> setCurrentFrameHolder(String s){
		if(s.equals("choosePlayType")){
			((MainMenu)currentFrame).dispose();
			currentFrame = new ChoosePlayTypeMenu();
			return ((ChoosePlayTypeMenu)currentFrame).getButtons();
		}
		else if(s.equals("highScores")){
			((MainMenu)currentFrame).dispose();
			currentFrame = new HighScoresMenu();
			return ((ChoosePlayTypeMenu)currentFrame).getButtons();
		}
		else if(s.equals("help")){
			((MainMenu)currentFrame).dispose();
			currentFrame = new HelpMenu();
		}
		else if(s.equals("exit")){
			((MainMenu)currentFrame).dispose();
			System.exit(0);
		}
		else if(s.equals("back")){
			if(currentFrame.getClass().getName().equals("ChoosePlayTypeMenu")){
				((ChoosePlayTypeMenu)currentFrame).dispose();
				currentFrame = new MainMenu();
			}
			else if(currentFrame.getClass().getName().equals("HighScoresMenu")){
				((HighScoresMenu)currentFrame).dispose();
				currentFrame = new MainMenu();
			}
			else if(currentFrame.getClass().getName().equals("HelpMenu")){
				((HelpMenu)currentFrame).dispose();
				currentFrame = new MainMenu();
			}
			return currentFrame;
		}
		else if(s.equals("pause")){
			pauseFrame = currentFrame;
			((GameEngine)pauseFrame).setVisible(false);
			// GameEngine'in içindeki gameLoopu durdur.
			currentFrame = null;
		}
		else if(s.equals("backToGame")){
			((InGameMenu)currentFrame).dispose();
			currentFrame = pauseFrame;
			((GameEngine)currentFrame).setVisible(true);
			// GameEngine'in içindeki gameLoopu devam ettir.
		}
		
	}
	public void setCurrentFrameHolder(String s, int level){
		
	}
	
	public void openFrames(){
		
	}
	public Object getCurrentFrameHolder(){
		return this. currentFrame;
	}
	
}
